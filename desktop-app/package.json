{
  "name": "spine-ai-desktop",
  "version": "1.0.0",
  "description": "Spine MRI AI Analysis - Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "dist": "vite build && electron-builder --win --x64 --config electron-builder.config.cjs",
    "dist:portable": "vite build && electron-builder --win portable",
    "clean": "rimraf dist installer release",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "axios": "^1.6.0",
    "marked": "^12.0.0",
    "dompurify": "^3.0.0",
    "react-quill": "^2.0.0",
    "jspdf": "^2.5.2",
    "cornerstone-core": "^2.6.1",
    "cornerstone-wado-image-loader": "^4.13.2",
    "dicom-parser": "^1.8.9",
    "cornerstone-tools": "^6.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "rimraf": "^5.0.5",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.spineai.desktop",
    "productName": "Spine AI",
    "copyright": "Copyright Â© 2025",
    "icon": "./electron/icon.ico",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "installer",
      "buildResources": "electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "./electron/icon.ico",
      "publisherName": "Spine AI",
      "signAndEditExecutable": false,
      "fileAssociations": [
        {
          "ext": "dcm",
          "name": "DICOM File",
          "description": "DICOM Medical Image"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "./electron/icon.ico",
      "uninstallerIcon": "./electron/icon.ico",
      "installerHeaderIcon": "./electron/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Spine AI",
      "license": "LICENSE.txt",
      "artifactName": "Spine-AI-Setup-${version}.${ext}"
    },
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv/**",
          "!__pycache__/**",
          "!*.pyc",
          "!uploads/**",
          "!*.db"
        ]
      }
    ]
  }
}
